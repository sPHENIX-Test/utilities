pipeline {

    agent none

        stages { 
            stage('Example') 
            {
        agent any
            
                steps {
                        timestamps {
                   				 echo 'Hello World'
                        }
                }
            }
                   
            stage('SCM Checkout')
            {
        agent any
                steps 
                {
                        timestamps {
                        
                            dir('coresoftware') {
                                git url: 'https://github.com/sPHENIX-Test/coresoftware.git'
                            }
                            dir('macros') {
                                git url: 'https://github.com/sPHENIX-Test/macros.git'
                            }

                            sh('ls')
                            sh('pwd')
                        }
                }
             }
             
             
        stage('Build')
        {
            parallel {
            
	            stage('cppcheck')
	            {
	        				agent any
	       
	                steps 
	                {
	                        timestamps {
	                        
	
	                            sh('ls')
	                            sh('pwd')
	                        }
	                }
	        		}
	    		}
    		}
             
        }
        
        
}
