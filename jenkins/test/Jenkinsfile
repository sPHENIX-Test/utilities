pipeline {
        agent any
        stages { 
            stage('Example') 
            {
            
                steps {
                        timestamps {
                   				 echo 'Hello World'
                        }
                }
            }
                   
            stage('SCM Checkout')
            {
                steps 
                {
                        timestamps {
                        
                            dir('coresoftware') {
                                git url: 'https://github.com/sPHENIX-Test/coresoftware.git'
                            }
                            dir('macros') {
                                git url: 'https://github.com/sPHENIX-Test/macros.git'
                            }

                            sh('ls')
                            sh('pwd')
                        }
                }
             }
        }
        
        stages
        {
            stage('cppcheck')
            {
                steps 
                {
                        timestamps {
                        

                            sh('ls')
                            sh('pwd')
                        }
                }
        		}
    		}
        
}
